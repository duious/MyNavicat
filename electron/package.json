{
  "name": "MyNavicat",
  "version": "0.0.1",
  "description": "A faster, better and more stable redis desktop manager.",
  "author": "duious",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "electron-updater": "^4.3.4",
    "electron-store": "^6.0.0"
  },
  "repository": "github:duious/MyNavicat",
  "build": {
    "appId": "duious.MyNavicat",
    "productName": "MyNavicat",
    "artifactName": "${productName}.${version}.${ext}",
    "copyright": "Copyright Â© 2020 duious",
    "asar": true,
    "directories": {
      "output": "build-apps",
      "buildResources": "./"
    },
    "electronVersion": "10.0.0",
    "files": [
      "!_assets/js/*.map",
      "!_assets/css/*.map"
    ],
    "publish": [{
      "provider": "github",
      "owner": "duious",
      "repo": "MyNavicat",
      "releaseType": "prerelease"
    }],
    "win": {
      "icon": "icons/icon.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "menuCategory": true,
      "allowElevation": false
    },
    "linux": {
      "icon": "icons/",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "type": "development",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg", "mas"
      ],
      "extendInfo": {
        "ElectronTeamID": "8888888888"
      }
    }
  }
}
